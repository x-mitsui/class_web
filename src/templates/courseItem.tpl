<div class="course-item course-card">
  <div class="course-cover">
    <a href="{{href}}" target="_blank">
      <img src="{{posterKey}}" alt="{{courseName}}" class="course-img">
    </a>
  </div>
  <h1 class="course-tt">
    <a href="{{href}}" target="_blank">
      {{courseName}}
    </a>
  </h1>
  <div class="course-info">
    <span class="{{priceClass}}">

      {{price}}
    </span>
    <span class="right">
      {{studentCount}}人正在学习
    </span>
  </div>
</div>